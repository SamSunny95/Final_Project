<% include partials/header.ejs %>
      <div class="jumbotron" style="background-image: url('http://bridgefordtrust.com/wp-content/uploads/2012/04/background1.jpg');
  background-repeat:no-repeat; display: compact ; " >
  <main class="container">
     <div class="col-lg-12 text-center v-center ">
     <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
      <h1 class="heading">Login</h1>
      <span class="col-md-4 col-md-offset-4">
           <form method="post">
                <fieldset class="form-group">
                    <label>Username:</label>
                    <input type="text" class="form-control" name="username" required autofocus/>
                 </fieldset>
                 <fieldset class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" name="password" required/>
                    </br>
                   <p> or <em><a href="/register">Register</a></em></p>
                </fieldset>
                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Log In"/>
               </fieldset>
            </form>
      </span>
         </div>
    </main>
     </div>
<% include partials/footer.ejs %>