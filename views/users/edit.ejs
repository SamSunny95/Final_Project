<% include ../partials/header.ejs %>
 <div class="jumbotron" style="background-image: url('http://bgfons.com/upload/cloth_texture622.jpg');
             background-repeat:no-repeat; display: compact ; " >
<main class="container">
    <div class="col-lg-12 text-center v-center ">
    <h1 class="heading">Edit A User</h1>
    <span class="col-md-4 col-md-offset-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="email">Email: *</label>
                <input name="email" type="email" class="form-control" required value="<%= user.email %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="username">Username: *</label>
                <input name="username" type="text" class="form-control" required value="<%= user.username %>" />
            </fieldset>
            <fieldset class="form-group">
                <label for="password">Password: *</label>
                <input name="password" type="password" class="form-control" %>"/>
            </fieldset>
            <fieldset class="form-group">
                <label for="displayName">Display Name: *</label>
                <input name="displayName" type="text" class="form-control" required value="<%= user.displayName %>"/>
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/users/delete/<%= user._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/users" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </span>
    </div>
</main>
 </div>
<% include ../partials/footer.ejs %>
